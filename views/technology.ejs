<!--% Header template  -->
<%- include('partials/header') %>

<!--% Navbar  -->

<%- include('partials/navbar') %>




<section class="Top-Stories my-5">
  <div class="container">
    <h1 class="display-5 text-light my-5">Technology</h1>
    <h2 class="display-6 text-light mb-4">Top Stories</h2>

    <!--% Technology-Cards -->

    <div class="row">
      <% for( let i = 0; i < 4; i++ ) { %>
      <%- include('partials/technologyCards') %>
      <% } %>
    </div>
    <div class="row">
      <% for( let i = 4; i < 8; i++ ) { %>
      <%- include('partials/technologyCards') %>
      <% } %>
    </div>
    <div class="row">
      <% for( let i = 8; i < 12; i++ ) { %>
      <%- include('partials/technologyCards') %>
      <% } %>
    </div>
  </div>
</section>


<!--& More News  -->

<section class="Technology pb-3">
  <div class="container">
    <h2 class="display-6 text-light mb-4">More News</h1>
      <div class="News-Articles">
        <% tech.forEach(tech => { %>
        <% if (tech.urlToImage!=null) { %>
        <div class="card mb-3" style="max-width: 940px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="<%= tech.urlToImage %>" class="img-fluid rounded-start " alt="">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= tech.title %> </h5>
                <a href="<%= tech.url %>" class="stretched-link">
                  <p class="card-text">
                    <small class="text-muted"><%= tech.source.name%></small>
                  </p>
                </a>
              </div>
            </div>
          </div>
        </div>
        <%}%>
        <% }) %>
      </div>
  </div>
</section>


<!--% Footer  -->

<%- include('partials/footer') %>



